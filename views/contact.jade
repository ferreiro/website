extends ./includes/layout

block content
  
  .container_left#sectionHeader
    include ./includes/breadcrumb.jade

    .profileData.box_with_shadow

      h3.profileData_title Contact info
      ul.profileData_list
        
        li.profileData_entry
          p.profileData_entry_text_without_icon <b>Email:</b> jorge @ ferreiro . me
      
        li.profileData_entry
          p.profileData_entry_text_without_icon <b>City:</b> Madrid (Spain)
    
      h3.profileData_title Social networks
      ul.profileData_list
        
        li.profileData_entry
          a(href='', target='_blank').profileData_entry_link
            span.profileData_entry_icon
              span.icon-github
            p.profileData_entry_text Github @ferreiro
            
        li.profileData_entry
          a(href='', target='_blank').profileData_entry_link
            span.profileData_entry_icon
              span.icon-linkedin
            p.profileData_entry_text Linkedin @jgferreiro
        
        li.profileData_entry
          a(href='', target='_blank').profileData_entry_link
            span.profileData_entry_icon
              span.icon-twitter
            p.profileData_entry_text Twitter @jgferreiro
            
  .container_right
    
    .contact#animate_div
      
      .profileCard
        .profileCard_avatar
        .profileCard_bg(style="background-image:url(/images/contact.jpg);")
   
      if content.title
        h2 !{content.title}
            
      p.formNotificationMessage.success Your message has been sent. Thank you!

      form.contact_form(action="/contact/send", method="post", autocomplete="off")#contactform

        fieldset.contact_form_fieldset
          .contact_fieldset_data
            //p Name (*)
            p.wrong#wrongName Error: Your name can not be blank
            input.input_not_blank(type="name", id="the_name", name="contact_name", placeholder="#{content.form.name || 'What is your name?'}").contact_form_fieldset_input

        fieldset.contact_form_fieldset
          .contact_fieldset_data
            p.wrong#wrongEmail Error: The email you introduced is not valid. Try again.
            input.input_email(type="name", id="email", name="contact_email", placeholder="#{content.form.email || 'And your email?'}").contact_form_fieldset_input

        fieldset.contact_form_fieldset
          .contact_fieldset_data
            p.wrong#wrongMessage Error: Hey! Fill some text here ;).
            textarea.input_not_blank(type="name", id="message", name="contact_msg", placeholder="#{content.form.message || 'Send message'}").contact_form_fieldset_input
        
        //- Pass the current location to the form
        input(type="hidden", name="contact_source_code", id="source", value="#{title}")
          
        fieldset.contact_form_fieldset
          .contact_form_newsletter
            span.contact_form_newsletter_check
              .mk-trc(data-style="check")
                input(id="checkbox1.1", class="newsletter", type="checkbox", name="contact_subcription", value="Subscribed", checked)
                label(for="checkbox1.1")
                  i
            span.contact_form_newsletter_text #{content.form.newsletter || 'I want to receive projects and updates from Jorge'}
 
        p.formNotificationMessage.failure Sorry. Your message couldn't been sent.<br /> Try again or <u><a class="openModalBox">contact me directly</a></u>
                    
        fieldset#formSendButton.contact_form_fieldset.contact_fieldset_nomargin
          input(type="submit", value="#{content.sendButton || 'Send message'}").button.send.send_margin.contact_form_fieldset_submit
        
