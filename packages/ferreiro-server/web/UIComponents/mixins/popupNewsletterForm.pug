include ./subscriptionBoxLarge

mixin popupNewsletterForm(opts)
  .popup__header
    h3.popup__header__title The Product Engineer

  a(href="#").popup__close
    span.icon.ion-android-close

  if opts && opts.warning
    p= warning

  - autodisplay = opts && opts.autodisplay !== undefined ? String(opts.autodisplay) : 'true'
  input(type="hidden", name="autodisplay", class="autodisplay", value= autodisplay)

  +subscriptionBoxLarge({
    displayForm: true,
    displayTitle: false,
    scrollToError: false,
    customBody: (opts && opts.customBody ? opts.customBody : 'Join the newsletter and receive new blog posts and projects directly in your inbox ðŸ˜Š')
  })
