			.loader {
				width: 100%;
				height: 100%;
				background: rgba(255,255,255, 1) url("/images/three-dots.svg");
				background-repeat: no-repeat;
				background-size: 60px auto;
				background-position: 50% 50%;
				position: fixed;
				z-index: 1000000000000;
				left: 0;
				top: 0;
