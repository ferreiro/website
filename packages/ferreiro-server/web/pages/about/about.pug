include ../../UIComponents/mixins/resumeEntry
include ../../UIComponents/mixins/timelineEntry
include ../../UIComponents/mixins/experienceEntry
include ../../UIComponents/mixins/subscriptionBoxLarge

block content_full
 .profileCard
    .profileCard_bg
      // SEO
      img
    .profileCard_avatar
      img(src="/images/jorge_ferreiro_software_engineer_developer_entrepreneur.jpg")
    .profileCard_userFields
      h1.profileCard_name Jorge Ferreiro
      h2.profileCard_job <strong>Software Engineer / Entrepreneur</strong>

      .about_resume
        a(href="/resume/jorge_ferreiro_resume.pdf?download=true", target="_blank").about_resume_button.about_resume_button_download Download my resume
        a(href="/resume/jorge_ferreiro_resume.pdf", target="_blank").about_resume_button.about_resume_button_view View my resume

block content_full

    style.
        @media (max-width: 1060px) {
            .fullHeader__image {
                margin-bottom: -3.5em;
            }
        }

    +Header({
      headerContentClass: 'fullHeader__content__about',
      title: 'About me',
      subtitle: 'Software Engineer @ Eventbrite Incubation (R&D), Entrepreneur, blog writer and self-taught learner',
      paragraphs: [
        ...bio,
      ],
      contentOrder: 1,
      isExperienceIconsDark: false,
      experience,
      hasBottomBorder: true,
      buttonBorderSize: '2px',
      buttons: [],
      padding: '4em 1.5em',
      mainColor: '#fff',
      titleColor: 'rgba(255, 255, 255, 1)',
      subtitleColor: 'rgba(255, 255, 255, 0.9)',
      paragraphColor: 'rgba(255, 255, 255, 0.8)',
      buttonColor: '#d83901',
      linkColor: '#ab8882',
      backgroundColor: '#13103c',
      backgroundPosition: 'center center',
      backgroundPositionDesktop: '60% 10%',
      backgroundImage: '',
      layoverImage: '/images/about/test_2.png',
      layoverSizeMobile: 'auto 100%',
      layoverSizeDesktop: 'auto 70%',
    })

    style.
        .fullHeader__image {
            // background-attachment: fixed;
        }

    .bigButtons
        a(
            href="/resume/jorge_ferreiro_resume.pdf?pdf=resume&ref=about",
            class="bigButtons__item bigButtons__resume"
        )
            .bigButtons__item__content
                span.icon.icon-cloud-download
                span.margin-left-1.bigButtons__item__text Download resume

        .bigButtons__separator-horizontal

        a(
            target="_blank",
            rel="noopener noreferrer"
            href="https://www.linkedin.com/in/jgferreiro/",
            class="bigButtons__item bigButtons__linkedin"
        )
            .bigButtons__item__content
                span.icon.icon-linkedin
                span.margin-left-1.bigButtons__item__text Connect on Linkedin

block content_wrapped

    //- script.
        function openCity(cityName) {
            var i;
            var x = document.getElementsByClassName("companies-selector__item");
            for (i = 0; i < x.length; i++) {
                x[i].style.display = "none"; 
            }
            document.getElementById(cityName).style.display = "block"; 
        }

    //- .companies-selector
        .companies-selector__header
            <div class="w3-bar w3-black">
                <button class="w3-bar-item w3-button" onclick="openCity('Amazon')">London</button>
                <button class="w3-bar-item w3-button" onclick="openCity('Dailyfocus Application')">Paris</button>
                <button class="w3-bar-item w3-button" onclick="openCity('Virality')">Tokyo</button>
            </div>
            each company in companies
                <img class="companies__item" height="30px" src="#{company.image}" alt="#{company.name}" />

        .companies-selector__body
            each item in work || []
                .companies-selector__item(id= item.title)
                    +experienceEntry(item)

            each item in education || []
                .companies-selector__item(id= item.title)
                    +experienceEntry(item)


    //-.twoColsGrid
        .twoColsGrid__item
            .twoColsGrid__item__wrapper
                .timeline#education
                    .timeline__wrapper
                        .timeline__badge
                            span.timeline__badge__title Education
                        .timeline__entries
                            each item in education || []
                                +timelineEntry(item)

        .twoColsGrid__item
            .twoColsGrid__item__wrapper
                .timeline#experience
                    .timeline__wrapper
                        .timeline__badge
                            span.timeline__badge__title Experience
                        .timeline__entries
                            each item in work || []
                                +timelineEntry(item)

block after_content
    .hotLinks
      .hotLinks__list
        a(href="/blog?ref=about").hotLinks__item(class="lazy", data-src="/images/blog/jorge_ferreiro_in_san_francisco_golden_gate_software_engineer_entrepreneur.jpg")
          h3 Discover my blog
