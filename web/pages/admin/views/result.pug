extends ./admin.layout.pug

block extraScripts
    script.
      setTimeout(function () {
        window.location.replace(#{redirectTo || '/admin'})
      }, 2000)

block content
  if success
    .success(style="background: green; padding: 1em;")
      h1= success

  if error
    .error(style="background: red; padding: 1em;")
      h1= error
