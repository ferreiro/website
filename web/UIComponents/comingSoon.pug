  script.
    var nextYear = moment.tz("2017-10-17 15:00", "Europe/Madrid");

    $('#clock').countdown(nextYear.toDate(), function(event) {
      var days = parseInt(event.strftime('%D'))
      var text = days <= 1 ? 'day' : 'days'

      if (days >= 1) {
        $(this).html('<b>' + days + '</b> ' + text + ' left')
        $('.comingSoon__extra').html('and... ' + event.strftime('%H:%M:%S') + ' hours ðŸ˜Š')
      } else {
        $(this).html('<b>' + event.strftime('%H:%M:%S') + '</b>')
        $(this).append('<span class="small"></span>')
      }
    })

    displayHeader(function (){
      displayCall2Action(() => {
        $('.comingSoon__footer').fadeIn(600)
      })
    })

    function displayCall2Action (next) {
      setTimeout(function () {
        $('#call2Action')
          .css({ opacity: 1 })
          .addClass('animated bounceIn')
        return next()
      }, 1060)
    }

    function displayHeader (next) {
      setTimeout(function () {
        $('.comingSoon__header')
          .css({ opacity: 1 })
          .addClass('animated fadeInDown')
        return next()
      }, 1000)
    }


  script.
    setTimeout(function () {
      $('.comingSoon__failure').fadeOut(500)
    }, 3000)

    $('form').submit(submitForm)

    function submitForm (event) {
      const form = $('.beta__signup')
      const formInputs = $('.formInputs')
      const nameInput = $('#name')
      const emailInput = $('#email')
      const submitText = $('.beta__signup__text')
      const submitLoader = $('.beta__signup__loader')
      const submitButton = $('.beta__signup__submit')
      const submitSuccess = $('.beta__signup__completed')

      const url = '/api/v1/contact/subscribe'
      const formData = {
        __email: emailInput.val(),
        __name: nameInput.val()
      }

      formInputs.hide(0)
      submitText.hide(0)
      submitLoader.show(0)

      $.post(url, formData, function (data, status, xhr) {
        submitLoader.hide(0)

        if (data.success) {
          form.addClass('beta__signup__subscribed')
          submitSuccess
            .show(0)
            .delay(200)
            .addClass('animated rubberBand')
          formInputs.hide(0)
          submitButton.hide(0)
        } else if (status === 'success') {
          if (data.error) {
            window.alert(data.error)
            formInputs.show(0)
            submitText.show(0)
          }
        }
      })

      return false
    }

