mixin seriesCard(post)
  - postUrl = '/blog/series/' + post.permalink
  - postBackground = 'background-image: url(' + post.pic + ');'

  .postCard.postCard__withoutSummary.shadow__box.lazy
    input(type="hidden", name="post_permalink", value= '/blog/series/' + post.permalink)

    //- <img> is only for seo :). To set
    //- background, use background-image
    .postCard__header.postCard__headerBig(style= postBackground)
      .postCard__fixedTitleWithGradient
        if post.favicon
            .postCard__fixedTitleWithGradient__favicon(style="background-image:url(" + post.favicon + ");")
        .postCard__fixedTitleWithGradient__text= post.title
      .postCard__header__gradient
      a(href= postUrl).postCard__header__link
      img(src= post.pic).lazy

      if post.series
        a(href= '/blog/series/' + post.series.permalink).postCard__series
          .postCard__series__button
            span.postCard__series__icon(style="background-image:url(" + post.series.pic + ");")
            span.postCard__series__text= post.series.title + ' series'