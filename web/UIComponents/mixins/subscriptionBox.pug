mixin subscriptionBox()
  .subscriptionBox
    h3.subscriptionBox__title Join the newsletter!

    .subscriptionBox__background
      span.icon.ion-ios-film-outline(style="position: absolute; margin-bottom: -5px; bottom: 0; right: 0;")
      span.icon_small.ion-ios-bookmarks-outline(style="margin-top: -4px; position: absolute; bottom: 0; left: 0;")

    .subscriptionBox__collage
      .subscriptionBox__collage__wrapper
        .subscriptionBox__collage__icons
          i.icon.ion-ios-film-outline(style="position: absolute; margin-bottom: -3px; bottom: 0; right: 0;")
          i.icon.ion-ios-time-outline(style="position: absolute; font-size:3em; bottom: 10px; left: 0;")
          i.icon.ion-ios-bookmarks-outline(style="margin-top: -4px; position: absolute; top: 0;  font-size: 2.8em; right: 10%;")
          //-ios-color-filter-outline
        ul.subscriptionBox__collage__features
          li.subscriptionBox__collage__feature
            span.icon.ion-star
            |Receive my the new posts
          li.subscriptionBox__collage__feature
            span.icon.ion-ios-timer
            |Get early access to content
          li.subscriptionBox__collage__feature
            span.icon.ion-speakerphone
            |Know my updates &amp; projects

    //form.subscriptionBox__form(action="/api/v1/newsletter/subscribe", method="POST")
      input.subscriptionBox__email(type='text', name='email', placeholder='Your email address')
    form(action="/newsletter", method="GET", target="_blank").subscriptionBox__form
      span.subscriptionBox__completed
        | âœ”
        span(style='color: #000; margin-left: 0.5em;') Subscribed!
      button.subscriptionBox__submit.openNewsletterSubscription
        img.subscriptionBox__loader(src='/images/spinner.svg')
        span.beta__signup__text Subscribe to the blog
