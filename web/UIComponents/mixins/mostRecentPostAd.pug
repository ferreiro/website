mixin mostRecentPostAd(opts)
    - lastPost = opts && opts.post ? opts.post : null
    - sticky = opts && opts.sticky ? opts.sticky : false

    if lastPost
        .mostRecentPostAd(class= sticky ? 'mostRecentPostAd__fixed' : '')
            input(type="hidden", class="lastPostId", value= lastPost._id)
            a(href= '/blog/' + lastPost.permalink).mostRecentPostAd__wrapper
                .mostRecentPostAd__text
                    img(src="/images/bullhorn.svg").mostRecentPostAd__icon
                    span.mostRecentPostAd__button New blog post
                    h2.mostRecentPostAd__title.truncate= lastPost.title
                    p.mostRecentPostAd__arrow >