mixin sharePostBig(blogUrl, source)

  - feedbackUrl = '/contact/feedback?redirect=' + blogUrl + '&source=' + source

  .sharePostBig#sharePostEmergent.shadow__box
    h3.sharePostBig__title <span>Did you like my post?</span>
    //- p.sharePostBig__subtitle Help me to spread the knowledge and share this post with your community. This helps me a lot! ðŸ˜Š
    p.sharePostBig__subtitle Spread the knowledge with your community ðŸ˜Š

    ul.sharePostBig__list
      li.sharePostBig__entry
        a(class="linkedinShare").sharePostBig__link.sharePostBig__linkedin
          span.sharePostBig__icon.icon-linkedin2
          span.sharePostBig__text Share

      li.sharePostBig__entry
        a(class="tweetShare").sharePostBig__link.sharePostBig__twitter
          span.sharePostBig__icon.icon.ion-social-twitter
          span.sharePostBig__text Tweet

      li.sharePostBig__entry
        a(href= feedbackUrl).sharePostBig__link.sharePostBig__feedback
          span.sharePostBig__text Send Feedback

    
