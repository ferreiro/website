mixin talkEntry(talk)
  .talk
    .talk__title
      h1= talk.title
    input(type="hidden", name="iframe_src", value=talk.iframeSrc)
    a(href= talk.url, target="_blank").talk__link
    .talk__image(style="background-image: url(" + talk.pic + ");")
    //.talk__callToAction
      if talk.type == "video"
        .talk__callToAction__button Watch video
      else if talk.type == "slides"
        .talk__callToAction__button Read slides
      else
        .talk__callToAction__button See more about it

