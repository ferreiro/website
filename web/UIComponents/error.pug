extends ./layout

block content

  if error && error.stack
    pre(style="background: #fff;") #{error.stack}

  style.
    .warningMessage { max-width: 400px; }
    .warningMessage__title { margin-bottom: 0.4em; }

  .warningMessage

    if title
      h1.warningMessage__title= title
      h2= error.status
    else
      h1.warningMessage__title Page not found

    if specialMessage
      p.error_text !{specialMessage}
    else
      p.error_text Hi! I coud not find the page you are looking for... Could you please check if the URL is correct?<br />
      p.error_text If you think this page must work. Please, report the problem to &rarr; <a class="mailLink"><span class='email'>jorge AT ferreiro DOT com</span></a>
      p.error_text <a href="/" class="error-link">Take me home ></a>

    .warningMessage__call2Action.box_with_shadow
      +subscriptionBox()